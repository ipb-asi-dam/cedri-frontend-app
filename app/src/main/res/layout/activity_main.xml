<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logging_background"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/loggin_boxLogoImage"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="48dp" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp" android:layout_marginEnd="48dp" android:layout_marginRight="48dp">

        <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/logo" android:id="@+id/logging_logoImage"/>
    </LinearLayout>
    <TextView
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:id="@+id/emailTextBackgroun" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loggin_boxLogoImage" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.281"/>

    <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:hint="Email"
            android:drawableLeft="@drawable/round_person_black_18dp"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/black"
            android:background="@drawable/input_background_circle"
            android:id="@+id/editTextEmail"
            app:layout_constraintEnd_toEndOf="@+id/emailTextBackgroun"
            app:layout_constraintStart_toStartOf="@+id/emailTextBackgroun"
            app:layout_constraintTop_toTopOf="@+id/emailTextBackgroun"
            app:layout_constraintBottom_toBottomOf="@+id/emailTextBackgroun"/>

    <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:hint="Password"
            android:drawableLeft="@drawable/round_lock_black_18dp"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/black"
            android:background="@drawable/input_background_circle"
            android:id="@+id/editTextPassword"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <Button
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="LOGIN"
            android:background="@drawable/login_button_background"
            android:id="@+id/buttonLogin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/buttonForgotPassword"/>

    <Button
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:text="Forgot Password?"
            android:background="@drawable/login_button_background"

            android:id="@+id/buttonForgotPassword" android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            app:layout_constraintVertical_bias="1.0"/>



</android.support.constraint.ConstraintLayout>