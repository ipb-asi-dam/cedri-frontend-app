<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logging_background"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/loggin_boxLogoImage"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:layout_marginRight="50dp">

        <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/logo" android:id="@+id/logging_logoImage"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>