<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AuthorPerfilActivity"
        android:background="@color/backgroundLight">

    <!-- TODO: fazer a "componetização" dos elementos como a Toolbar.-->

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            tools:context=".MenuActivity"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"
            app:contentInsetStart="0dp"
            android:id="@+id/toolbar">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                    android:id="@+id/backImageButtonAutorPerfil"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:background="@color/colorPrimary"
                    android:contentDescription="Logout button."
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>

            <TextView
                    android:text="@string/tela_perfil_name"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_height="32dp"
                    android:id="@+id/textView"
                    android:gravity="center"
                    android:layout_centerInParent="true"/>

            <ImageButton
                    android:id="@+id/logoutImageButton2"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_black_24dp"
                    android:background="@color/colorPrimary"
                    android:contentDescription="Avatar button."
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
            />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            android:layout_margin="16dp">

        <ImageView
                android:id="@+id/author_perfil_avatar"
                android:src="@drawable/ic_person_black_24dp"
                android:scaleType="centerCrop"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/author_perfil_full_name"
                android:text="Nome Completo do Autor"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="32dp"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginBottom="8dp"
                        card_view:cardBackgroundColor="@color/backgroundLight">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/colorPrimaryDark">

                        <TextView
                                android:id="@+id/author_phone_number"
                                android:text="+000 000000000"
                                android:textColor="@color/colorPrimary"
                                android:gravity="left|center"
                                android:paddingLeft="16dp"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/ic_phone_black_24dp"
                                android:drawableTint="@color/colorPrimary"
                                android:clickable="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginBottom="8dp"
                        card_view:cardBackgroundColor="@color/colorPrimaryDark">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/author_perfil_first_email"
                                android:text="fulano@exemplo.com"
                                android:textColor="@color/colorPrimary"
                                android:gravity="left|center"
                                android:paddingLeft="16dp"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/ic_email_black_24dp"
                                android:drawableTint="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginBottom="8dp"
                        card_view:cardBackgroundColor="@color/colorPrimaryDark">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/author_perfil_second_email"
                                android:text="fulano@sample_example.com"
                                android:textColor="@color/colorPrimary"
                                android:gravity="left|center"
                                android:paddingLeft="16dp"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/ic_email_black_24dp"
                                android:drawableTint="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>